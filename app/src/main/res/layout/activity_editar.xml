<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNombre"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:hint="NÃºmero" />

    <EditText
        android:id="@+id/editImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNumero"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:hint="Imagen URL" />

    <Button
        android:id="@+id/btnGuardarEdicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editImagenes"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:text="Guardar" />
</RelativeLayout>
